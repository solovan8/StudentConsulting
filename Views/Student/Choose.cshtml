@model IEnumerable<StudentConsulting.Models.ConsultingArrange>;

@{
    ViewData["Title"] = "ChoseConsultings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-7">
        <h3>@ViewBag.Subject - @ViewBag.LecturerName</h3>
    </div>
    <div class="col-md-4">
        @if (Model.Any())
        {
            <br/>
            <p>Choose a consulting</p>
            <form asp-action="Schedule">
                <div class="form-group">
                    <select name="consultId" class="form-control" asp-items='new SelectList(Model, "Id", "Date")'></select>
                </div>
                <input class="btn btn-primary" type="submit" value="Submit" />
                <input type="hidden" value="@ViewBag.LecturerName" name="name" />
                <input type="hidden" value="@ViewBag.Subject" name="subject" />
            </form>
        }
        else
        {
            <br />
            <p>There is no scheduled consultings yet</p>
        }
    </div>
</div>



